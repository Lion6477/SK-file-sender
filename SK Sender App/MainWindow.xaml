<Window x:Class="SK_Sender_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SK Sender App" Height="450" Width="800">
    <DockPanel>
        <!-- Navigation Panel -->
        <StackPanel DockPanel.Dock="Left" Width="150" Background="LightGray">
            <DockPanel>
                <TextBlock Text="Version:"></TextBlock>
                <TextBlock Name="versionNumber" Text="1.22" Margin="5,0,0,0"></TextBlock>
            </DockPanel>
            
            <Button Name="btnReceive" Content="Receive" Margin="10" Click="btnReceive_Click" />
            <Button Name="btnSend" Content="Send" Margin="10" Click="btnSend_Click" />
        </StackPanel>

        <!-- Content Area -->
        <ContentControl Name="ContentArea" />
    </DockPanel>
</Window>