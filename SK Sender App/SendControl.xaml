<UserControl x:Class="SK_Sender_App.SendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wpf1="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             Margin="10">
    <Grid>
        <TextBox Name="txtServerIp" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30"
                 Text="Server IP" />
        <Button Name="btnSelectFile" Content="Select File" HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="100" Height="30" Margin="210,0,0,0" Click="btnSelectFile_Click" />
        <Button Name="btnSendFile" Content="Send" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"
                Height="30" Margin="320,0,0,0" Click="btnSendFile_Click" />
        <TextBlock Name="txtStatusSend" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0"
                   Width="500" Height="30" />
        <wpf1:CartesianChart Name="speedChartSend" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500"
                             Height="200" Margin="0,80,0,0" />
        <ProgressBar Name="progressBarSend" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="20"
                     Margin="0,290,0,0" />
    </Grid>
</UserControl>